root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab

[{*.go,Caddyfile}]
charset = utf-8
indent_size = 4
trim_trailing_whitespace = true

[*.yml]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[{*.json,*.js,*.ts,*.svelte}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
